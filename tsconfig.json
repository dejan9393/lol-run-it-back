{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/*.ts"
  ]
}
